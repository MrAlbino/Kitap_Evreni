@model IEnumerable<Web_Prog_Proje.Models.Kitap>
@{
    ViewData["Title"] = "Home Page";
}
<div class="container mt-4">
    <div class="row align-items-center">

        <div class="col-sm">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner shadow-emre">
                    @foreach (var item in Model)
                    {
                        <div class="@(item.Id==1?"carousel-item active":"carousel-item")">
                            <a asp-action="Details" asp-controller="Kitap" asp-route-id="@item.Id"><img src="@(item.ArkaplanResim)" class="d-block w-100 h-100 align-content-center rounded" /></a>
                            <div class="carousel-caption">
                                <h2>@item.KitapAd</h2>
                            </div>
                        </div>

                    }
                    @* @foreach (var item in Model)
                        {
                            <div class="@(item.Id==1?"carousel-item active":"carousel-item")">
                                <p class="position-absolute">@item.KitapAd</p>

                            </div>
                        }*@
                </div>

                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

    </div>

</div>


<div class="container">

    <h1 class="my-4 text-center">Son Eklenenler</h1>

    <!-- Marketing Icons Section -->
    <div class="row">
        @foreach (var item in Model.TakeLast(3))
        {
            <div class="col-lg-4 mb-4">
                <div class="card h-100 shadow-ayberk">
                    <h4 class="card-header bg-primary text-center">@item.KitapAd</h4>
                    <div class="card-body">
                        <p class="card-text">@item.Konu</p>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Kitap" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary bg-info">İncele</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
