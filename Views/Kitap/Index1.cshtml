@model IEnumerable<Web_Prog_Proje.Models.Kitap>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->

    <div class="col d-flex justify-content-center">
        <div class="card mt-3 bg-warning shadow-ayberk">
            <div class="card-body">
                <h3 class="font-weight-bold text-center">Kitaplar</h3>
            </div>
        </div>
    </div>
    <br />
    @foreach (var item in Model)
    {
        <!-- Blog Post -->
        <div class="card mb-5 shadow-ayberk">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6 w-75 h-75">
                        <a href="#">
                            <img class="rounded img-fluid w-50 h-50" src="@item.Resim" alt="">
                        </a>
                    </div>
                    <div class="col-lg-6 d-flex flex-column">
                        <h2 class="card-title font-weight-bold">@item.KitapAd</h2>
                        <p class="card-text">@item.Konu</p>
                        <p class="card-text">Sayfa Sayısı: @item.SayfaSayisi</p>
                        <p class="card-text">Dil: @item.Dil.DilId</p>
                        <p class="card-text">Basım Yılı: @item.BasimYili</p>
                        <p class="card-text">Kategori: @item.Kategori.KategoriAd</p>
                        <a href="#" class="btn btn-primary bg-info mt-auto ml-auto">İncele &rarr;</a>
                    </div>
                </div>
            </div>
            <div class="card-footer text-muted">
                Posted on January 1, 2017 by
                <a href="#">Start Bootstrap</a>
            </div>
        </div>
    }
</div>